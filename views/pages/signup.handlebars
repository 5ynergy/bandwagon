<section>
  
  <h1>Sign Up</h1>
<div class="ui container segment">
  <form action="#" class="ui form">
    <div class="field">
      <label>Username</label>
      <input
        type="text"
        id="username"
        name="username"
        placeholder="Enter username here"
      />
    </div>
    <div class="field">
      <label>Password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Enter password here"
      />
    </div>
    <div class="field">
      <label>Email</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Enter email here"
      />
    </div>
    <div class="field">
      <label>Artist/Band Name</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Enter artist/band name here"
      />
    </div>
    <div class="field">
      <label>Bio</label>
      <input
        type="text"
        id="bio"
        name="bio"
        placeholder="Enter artist biography here"
      />
    </div>
    <div class="field">
      <label>Socials</label>
      <input
        type="text"
        id="socials"
        name="socials"
        placeholder="Enter social media links here"
      />
    </div>
    <div class="field">
    <label>Choose Genre</label>
    </div>
    <select class="ui selection dropdown">
      <option value="">Genre</option>
      <option value="1">R&B</option>
      <option value="2">Pop</option>
      <option value="3">Hip-Hop</option>
      <option value="4">Latin</option>
      <option value="5">Electronic</option>
      <option value="6">DJ</option>
      <option value="7">Dance/Alternative</option>
      <option value="8">Rock</option>
      <option value="9">Indie</option>
      <option value="10">Soul/Funk</option>
      <option value="11">Folk/Acoustic</option>
      <option value="12">Metal</option>
      <option value="13">Blues</option>
      <option value="14">Country</option>
    </select>
    <br>
    <br>
    <div class="field">
    <label>Upload Profile Picture</label>
    </div>
    <div class="ui file input">
      <input type="file" id="profile_picture" name="profile_picture" />
    </div>
    <br>
    <br>
    <button class="ui primary button" id="submit" type="submit">Sign up!</button>
    </div>
    
  </form>
</div>
